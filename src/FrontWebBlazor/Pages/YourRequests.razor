@page "/yourRequests"

@using System.Collections.Generic;
@using HireHero.Shared.Models;

<h3>Your Requests</h3>
@if (offers == null)
{
    <p><em>No offers found</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Status</th>
                <th>Hero</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var offer in offers)
            {
                <tr>
                    <td>@offer.Id</td>
                    <td>@offer.Status</td>
                    <td>@offer.Hero.Name</td>
                    <td>...</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private IEnumerable<OfferResponse> offers;

        protected override Task OnInitializedAsync()
        {
            return base.OnInitializedAsync();
        }
}
